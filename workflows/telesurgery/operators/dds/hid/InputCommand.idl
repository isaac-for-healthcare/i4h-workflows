const string INPUT_COMMAND_TOPIC = "InputCommand";

enum HIDDeviceType { JOYSTICK, KEYBOARD, MOUSE };

struct InputCommand {
  @key string device_name;
  HIDDeviceType device_type;
  uint8 event_type;
  uint8 number;
  int16 value;
  int64 hid_capture_timestamp;  // Timestamp when the event was captured in nanoseconds
  int64 hid_publish_timestamp;  // Timestamp when the event was published in nanoseconds
  int64 hid_receive_timestamp;  // Timestamp when the event was received by IS in nanoseconds

  uint64 message_id;
};
